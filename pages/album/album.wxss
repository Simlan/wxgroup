/* album.wxss */
.container {
  padding-bottom: 0;
}
.img-container {
  width: 100%;
  
}

.img-content {
  display: flex;
  padding: 10rpx 30rpx 0;
}

.img-container .img-date {
  margin-right: 30rpx;
  color: #999999;
  font-size: 12px;
}
.img-list {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.img-list image {
  width: 150rpx;
  height: 150rpx;
  
}
.img-list text {
  margin-bottom: 30rpx;
}