/* album.wxss */
.container {
  padding-bottom: 0;
}
.img-container {
  width: 100%;
  
}

.img-content {
  display: flex;
  padding: 10rpx 30rpx 0;
}

.img-container .img-date {
  margin-right: 30rpx;
  color: #999999;
  font-size: 12px;
}
.img-list {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 30rpx;
  width: 550rpx;
}

.img-list image {
  width: 150rpx;
  height: 150rpx;
  margin: 4rpx;
}
.img-list text {
  margin-bottom: 30rpx;
}
.noresult {
  padding: 30rpx;
  text-align: center;
  font-size: 14px;
  color: #999999;
}